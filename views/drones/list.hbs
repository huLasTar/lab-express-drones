<div class="container bg-light p-5">
  <div class="row">
  
  <h2 class="text-center text-dark">Available drones</h2>

  <div class="card-deck">
  {{#each drones}}
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        <p class="card-text">Propellers: {{propellers}}</p>
        <p class="card-text">Maximum Speed: {{maxSpeed}}</p>
      </div>
      <div class="card-footer d-flex">
          <a class="btn btn-warning m-2" href="/drones/{{_id}}/edit">Edit</a>
          <form action="/drones/{{_id}}/delete" method="POST">
            <button class="btn btn-danger m-2">Delete</button>
          </form>
      </div>
    </div>
  {{/each}}
  </div>

  </div>
</div>
