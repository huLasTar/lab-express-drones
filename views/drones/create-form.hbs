<div class="container bg-light p-5">
  <div class="row">

    <h2 class="text-center text-dark">Create a new drone</h2>

    <form action="/drones/create" method="post">
      <div class="form-group">
        <label>Name:</label>
        <input class="form-control" type="text" name="name" />
      </div>

      <div class="form-group">
        <label>Number of Propellers:</label>
        <input class="form-control" type="number" name="propellers" min="4" />
      </div>

      <div class="form-group">
        <label>Maximum Speed:</label>
        <input class="form-control" type="number" name="maxSpeed" min="1" />
      </div>

      <button class="btn btn-success my-4" type="submit">Create</button>
    </form>

  </div>
</div>